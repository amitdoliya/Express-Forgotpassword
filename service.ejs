<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>

<body>
    <%- include('../../partials/admin/header.ejs')%>
        <section>
    <div class="container">
    <div class="row">
    <%-include('../../partials/admin/left.ejs')%>
     <div class="col-md-9">
        <h2>Service Management</h2>
       <table class="table table-hover">
        <tr>
        <th> Services:<%=totalservices%>  </th>
         <th>Publish Services:<%=totalpublish%></th>
        <th>Unpublish Services:<%=totalunpublish%> </th>
    </tr>                       
   </table>
<a href="/admin/serviceadd"><button class="btn btn-danger form-control">Add Service Here</button></a>
    <table class="table table-hover">
        <tr>
    <th>S.NO.</th>
    <th>Service Image</th>
    <th>Service Title</th>
    <th>Service Description </th>
     <th>Service Long Description </th>
         <th>Posted Date</th>
     <th>Service Status</th>
     <th>Delete</th>
        </tr>
            <%record.forEach((result,key)=>{%>
                <tr>
                 <td><%=key+1%></td>
    <td><img style="width:100px;" src="/upload/<%=result.img%>" alt=""></td>
               <td><%=result.title%> </td>
            <td><%=result.desc%></td>
            <td><%=result.ldesc%></td> 
            <td><%=result.posteddate%></td>
                <% if(result.status=='publish' ){%>
<td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%> </button></td>
            <%}else{%>
<td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></td>
                                                <%}%>
<td><a href="/admin/servicedelete/<%=result.id%>"><i class="bi bi-trash" style="color:red; font-size:20px;"></i></a></td>
</tr>                             
<%})%>
<%if(record.length==0){%>
    <tr><td colspan="8" class="text-center">No Record Found</td></tr>
    <%}%>

        </table>
                        </div>
                </div>
            </div>
        </section>
        <%- include('../../partials/admin/footer.ejs')%>
</body>

</html>
